{
  "homeassistant": {
    "url": "http://192.168.1.100:8123",
    "token": "YOUR_LONG_LIVED_ACCESS_TOKEN_HERE",
    "timeout": 10
  },
  "monitoring": {
    "interval": 30,
    "data_file": "/mnt/pve-host/nucbox-thermal.json",
    "http_port": 8080,
    "enable_file_monitor": true,
    "enable_http_server": true
  },
  "logging": {
    "level": "INFO",
    "file": "/home/rsi/logs/nucbox-monitoring/hub.log",
    "max_size": "10MB",
    "backup_count": 5,
    "console": true
  },
  "sensors": {
    "thermal_zone_socket": 0,
    "thermal_zone_cpu": 1,
    "cooling_devices": [0, 1, 2, 3, 4]
  },
  "health_check": {
    "enabled": true,
    "endpoint": "/health",
    "timeout": 30
  }
}